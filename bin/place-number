#!/usr/bin/env ruby
require 'number-placement'
include NumberPlacement

str = <<_END
78-----46
--63-----
1---89---
-75---81-
---4-5---
-91---43-
---83---4
-----46--
83-----51
_END

b = Board.parse(str)
puts b
puts

x = y = 0
while !b.complete?
  x, y, v = b.next_firm(x, y)
  if x and y and v
    b[x, y] = v
    puts b.to_s(x, y)
    puts
    x, y = Board.next_cell_from(x, y)
  else
    puts "Solution is not found"
    exit
  end
end
